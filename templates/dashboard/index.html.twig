{% extends 'base.html.twig' %}

{% block title %}Dashboard - Cirta{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard') }}
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}

{% block body %}
    <div id="dashboard-app">
        <div style="display: flex; align-items: center; justify-content: center; height: 100vh; color: #666;">
            Loading dashboard...
        </div>
    </div>
{% endblock %}
