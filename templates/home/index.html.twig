{% extends 'base.html.twig' %}

{% block title %}Home - Cirta{% endblock %}

{% block body %}
<div class="home-container">
    <h1>Welcome to Cirta</h1>
    {% if app.user %}
        <p>Logged in as {{ app.user.email }}</p>
        <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}
        <a href="{{ path('app_login') }}">Login</a>
    {% endif %}
</div>
{% endblock %}
